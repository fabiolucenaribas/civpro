{
  "productName": "CIVPRO",
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "www",
      "to": "app",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "artifactName": "CIVPRO-Setup-${version}.${ext}",
    "icon": "app/assets/icon.ico",
    "target": [
      "nsis",
      "portable"
    ]
  },
  "portable": {
    "artifactName": "CIVPRO-Portable-${version}.${ext}",
    "splashImage": "app/assets/electron.bmp"
  },
  "mac": {
    "artifactName": "CIVPRO-mac-${version}.${ext}",
    "icon": "app/assets/icon.icns",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "app/assets/icon.icns",
    "category": "Development",
    "target": [
      "deb",
      "AppImage"
    ]
  }
}
